<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.droid.jetpacktutorial">

    <application
        android:name=".JetpackApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".home.view.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".security.view.SecurityActivity"/>
        <activity android:name=".navigation.view.NavigationActivity" android:theme="@style/Theme.AppCompat.Light"/>
        <activity android:name=".room.view.RoomActivity"/>
        <activity android:name=".palette.view.PaletteActivity" />
        <activity android:name=".notifications.view.NotificationActivity" />
        <activity
            android:name=".preferences.view.PreferenceActivity"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity android:name=".workmanager.view.WorkActivity" />
    </application>

</manifest>