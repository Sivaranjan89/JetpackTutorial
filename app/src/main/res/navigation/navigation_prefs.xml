<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_example"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.droid.jetpacktutorial.preferences.view.fragments.MainFragment"
        android:label="MainFragment">
        <action
            android:id="@+id/open_prefs"
            app:destination="@id/preferenceFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/preferenceFragment"
        android:name="com.droid.jetpacktutorial.preferences.view.fragments.PreferenceFragment"
        android:label="PreferenceFragment" />
</navigation>