<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image"
        android:src="@mipmap/ic_launcher"
        android:layout_width="@dimen/d_150"
        android:layout_height="@dimen/d_150"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/d_20"
        android:contentDescription="@string/sample_image_for_palette" />

    <ImageView
        android:id="@+id/color_palette"
        android:layout_width="@dimen/d_150"
        android:layout_height="@dimen/d_150"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:layout_marginTop="@dimen/d_20"
        android:contentDescription="@string/show_color_extracted_from_sample_image" />

</androidx.constraintlayout.widget.ConstraintLayout>